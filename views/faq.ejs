    <!-- search for FAQ -->
    <form class="search-form" method="GET" action="/faq">
      <input
        type="text"
        id="faqSearch"
        name="search"
        placeholder="Search by title..."
        value="<%= search || '' %>"
        style="padding: 8px; width: 60%; max-width: 400px"
      />
