  <body>
    <!-- Header -->
    <header class="header">
      <div class="logo-title">
        <% if (info?.logo_url) { %>
        <a href="/home2"><img src="<%= info.logo_url %>" alt="Logo" /></a>
        <% } %>
        <p><%= info?.name || 'C&S Church Online' %></p>
      </div>

