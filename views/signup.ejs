      <form
        id="signup-form"
        action="/signup"
        method="post"
        enctype="multipart/form-data"
      >
        <!-- <input type="email" name="email" required placeholder="Email" /> -->
        <div class="container">
          <input type="text" name="email" placeholder="Email" required />
          <span class="toggle-password">
            <i class="fa fa-envelope"></i>
          </span>
        </div>

        <!-- <input type="text" name="username" required placeholder="Username" />
        -->
        <div class="container">
          <input type="text" name="username" placeholder="Full name" required />
          <span class="toggle-password">
            <i class="fa fa-user"></i>
          </span>
        </div>

        <!-- <input type="number" name="phone" required placeholder="Phone" /> -->
        <div class="container">
          <input type="number" name="phone" placeholder="Phone" required />
          <span class="toggle-password">
            <i class="fa fa-phone"></i>
          </span>
        </div>
        <div class="gender-box">
          <label style="font-size: 13px; color: grey; padding-left: 10px" for=""
            >Gender</label
          >
          <select style="margin-left: 10px; margin-bottom: 10px; padding: 5px;" name="gender" required>
            <option>Male</option>
            <option>Female</option>
            <option>Not Specified</option>
          </select>
        </div>

        <div class="password-container">
          <input
            id="password"
            type="password"
            name="password"
            placeholder="Password"
            required
          />
          <span id="togglePassword" class="toggle-password">
            <i class="fa fa-eye"></i>
          </span>
        </div>

        <!-- File input for image upload -->
        <label style="font-size: 12px" for="profile-pic"
          >Upload Profile Picture:</label
        >
        <input
          type="file"
          id="file-input"
          name="profile_picture"
          accept="image/*"
          required
        />

        <!-- Preview image container -->
        <div class="preview-container" id="preview-container">
          <img id="preview-image" alt="Image Preview" />
        </div>

