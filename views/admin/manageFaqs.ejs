<!DOCTYPE html>
<html>
  <head>
    <title>Manage FAQs</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="icon" type="image/x-icon" href="/logo.png" />
    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
  </head>
  <body>
    <header class="header">
      <div class="logo-title">
        <img src="/logo.png" alt="Logo" />
        <p>C&S Church Online</p>
      </div>
      <nav>
        <a href="/admin/dashboard">Dashboard</a>
        <a href="/admin/articles">Articles</a>
        <a href="/admin/videos">Videos</a>
        <a href="/admin/ministry">About</a>
        <a class="active" href="/admin/faqs">FAQ</a>
        <a href="/admin/logout"  class="logout-button">Logout</a> <!-- Login remains a page link -->
        
      </nav>
    </header>
    <h2>Manage Frequently Asked Questions</h2>
    <div class="article-card">
      <% faqs.forEach(faq => { %>
      <div class="faq-item">
        <p><strong>Q:</strong> <%- faq.question %></p>
        <p><strong>A:</strong> <%- faq.answer || 'No answer yet' %></p>
        <p><small>Published: <%- faq.is_published ? 'Yes' : 'No' %></small></p>
        <div class="article-buttons">
          <a href="/admin/faqs/edit/<%= faq.id %>">Edit</a>
          <form
            action="/admin/faqs/delete/<%= faq.id %>"
            method="POST"
            onsubmit="return confirm('Are you sure you want to delete this FAQ?');"
          >
            <button type="submit">Delete</button>
          </form>
        </div>
        <hr />
      </div>
      <% }) %>
    </div>
    <script> CKEDITOR.replace('content'); </script>
  </body>
</html>
