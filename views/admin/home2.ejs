<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= info?.name || 'Ministry Home' %></title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="icon" type="image/x-icon" href="/logo.png">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <!-- Header -->
  <header class="header">
    <div class="logo-title">
      <% if (info?.logo_url) { %>
        <a href="/"><img src="<%= info.logo_url %>" alt="Logo"></a>
      <% } %>
      <p><%= info?.name || 'C&S Church Online' %></p>
    </div>
    
    <nav>
      <a href="#mission-vision">Home</a>
      <a href="#articles">Articles</a>
      <a href="#videos">Videos</a>
      <a href="#mission-vision">About</a> <!-- Assuming About refers to Mission & Vision -->
      <a href="/admin/login" class="login-button">Login</a> <!-- Login remains a page link -->
      <a href="/signup" style="background-color: rgb(0, 0, 0); color: rgb(255, 255, 255);" class="login-button">Signup</a> <!-- Login remains a page link -->
    </nav>
    
    
  </header>

  <!-- Mission & Vision -->
  <section id="mission-vision" class="section mission-vision">
    <h2>Our Mission</h2>
    <p><%= info?.mission || 'Our mission goes here...' %></p>

    <h2>Our Vision</h2>
    <p><%= info?.vision || 'Our vision goes here...' %></p>
  </section>

  <!-- Articles -->
  <section id="articles" class="section">
    <h2>Latest Articles</h2>
    <div class="card-grid">
      <% articles.forEach(article => { %>
        <div class="card">
          <h3><%= article.title %></h3>
          <% if (article.image_url) { %>
            <img src="<%= article.image_url %>" alt="Article Image" style="max-width: 100%; height: auto; object-fit: cover; border-radius: 8px;" >
          <% } %>
          <p><%= article.content.substring(0, 100) %>...</p>
          <!-- <small><%= new Date(article.created_at2).toLocaleDateString() %></small> -->
          <small><%= new Date(article.created_at3).toLocaleString() %></small>
        </div>
      <% }) %>
    </div>
    <div style="text-align: center; margin-top: 20px;">
      <a href="/articles" class="login-button">View All Articles</a>
    </div>
  </section>

  <!-- Videos -->
  <section id="videos" class="section">
  <h2>Recent Videos</h2>
  <div class="card-grid">
    <% videos.forEach(video => { %>
      <div class="card">
        <h3><%= video.title %></h3>
        <!-- <small>Embed URL: <%= video.embed_url %></small> -->

        <% if (video.embed_url) { %>
          <iframe 
            width="100%" 
            height="200" 
            src="<%= video.embed_url %>" 
            frameborder="0" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
            allowfullscreen>
          </iframe>
        <% } else { %>
          <p>Invalid or missing video URL</p>
        <% } %>
        <p><%= video.description %></p>
        <!-- <small><%= new Date(video.created_at2).toLocaleDateString() %></small> -->
        <small><%= new Date(video.created_at3).toLocaleString() %></small>
      </div>
      
    <% }) %>
  </div>
  <div style="text-align: center; margin-top: 20px;">
    <a href="/videos" class="login-button">View All Videos</a>
  </div>
</section>

</body>
</html>
