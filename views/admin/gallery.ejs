<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <header class="header">
    <div class="logo-title">
      <% info = info || {}; %> <% if (info.logo_url) { %>
      <img src="<%= info.logo_url %>" alt="Logo" />
      <% } %>
      <p><%= info?.name || 'C&S Church Online' %></p>
    </div>
    <button class="nav-toggle" onclick="toggleNav()">â˜°</button>
    <nav id="main-nav">
      <a href="/admin/dashboard">Dashboard</a>
      <a href="/admin/articles">Articles</a>
      <a href="/admin/videos">Videos</a>
      <a href="/admin/ministry">About</a>
      <a href="/admin/faqs">FAQ</a>
      <a class="active" href="/admin/gallery">Gallery Images</a>
      <a href="/admin/gallery/categories">Gal Categories</a>
      <a href="/admin/announcements">Announcement</a>
      <a href="/admin/newsletter">Newsletter</a>
      <a href="/admin/logout" class="logout-button">Logout</a>
      <!-- Login remains a page link -->
    </nav>
  </header>
  <body>
    <h2>Upload Gallery Image</h2>
    <form
      claass="gallery-upload-form"
      method="POST"
      action="/admin/gallery/upload"
      enctype="multipart/form-data"
    >
      <label>Category:</label>
      <select name="category_id" required>
        <% categories.forEach(cat => { %>
        <option value="<%= cat.id %>"><%= cat.name %></option>
        <% }) %></select
      ><br /><br />

      <label>Image:</label>
      <input type="file" name="image" accept="image/*" required />
      <img
        id="imagePreview"
        src="#"
        alt="Image Preview"
        style="
          display: none;
          max-width: 250px;
          margin-bottom: 16px;
          border-radius: 8px;
        "
      />
      <br /><br />
      <label>Caption:</label>
      <input type="text" name="caption" required />
      <button type="submit">Upload</button>
    </form>

    <!-- filtering images by category -->
    <label for="categoryFilter"><strong>Filter by Category:</strong></label>
    <select id="categoryFilter" style="margin-bottom: 24px">
      <option value="all">All Categories</option>
      <% categories.forEach(cat => { %>
      <option value="cat-<%= cat.id %>"><%= cat.name %></option>
      <% }) %>
    </select>

    <!-- the gallery section  -->
    <section class="section">
      <h3>Gallery Images</h3>
      <% categories.forEach(cat => { %>
      <div class="category-section" data-cat="cat-<%= cat.id %>">
        <h4 style="margin-top: 2rem"><%= cat.name %></h4>
        <div class="gallery-grid">
          <% // Ensure both sides are numbers for reliable comparison const
          catImages = images.filter(img => Number(img.category_id) ===
          Number(cat.id)); if (catImages.length === 0) { %>
          <p style="color: #aaa">No images in this category yet.</p>
          <% } %> <% catImages.forEach(img => { %>
          <div class="gallery-card">
            <img
              src="<%= img.url %>"
              alt="<%= img.caption %>"
              onclick="showModal('<%= img.url %>')"
              style="cursor: zoom-in"
            />
            <p><%= img.caption %></p>
            <div class="article-buttons">
              <form
                method="POST"
                action="/admin/gallery/delete/<%= img.id %>"
                style="display: inline"
              >
                <button
                  type="submit"
                  onclick="return confirm('Delete this image?')"
                >
                  Delete
                </button>
              </form>
              <a
                href="/admin/gallery/edit/<%= img.id %>"
                class="cta-btn"
                style="margin-top: 8px"
                >Edit</a
              >
            </div>
          </div>
          <% }) %>
        </div>
      </div>
      <% }) %>
    </section>

    <!-- image click to view event -->
    <div id="imgModal" class="img-modal" style="display: none">
      <span
        class="close-modal"
        id="closeModal"
        style="
          position: absolute;
          top: 10px;
          right: 20px;
          font-size: 2rem;
          cursor: pointer;
          color: #fff;
        "
        >&times;</span
      >
      <img
        class="img-modal-content"
        id="modalImg"
        style="
          max-width: 90vw;
          max-height: 90vh;
          display: block;
          margin: 40px auto 0 auto;
          border-radius: 12px;
          box-shadow: 0 4px 32px rgba(0, 0, 0, 0.4);
        "
      />
    </div>

    <!-- image preview script -->
    <script>
      const imageInput = document.querySelector('input[name="image"]');
      const preview = document.getElementById("imagePreview");

      imageInput.addEventListener("change", function () {
        const file = this.files[0];
        if (file) {
          const reader = new FileReader();
          reader.onload = function (e) {
            preview.src = e.target.result;
            preview.style.display = "block";
          };
          reader.readAsDataURL(file);
        } else {
          preview.src = "#";
          preview.style.display = "none";
        }
      });
    </script>

    <!-- image click to zoom view script -->
    <script>
      // Existing image preview code...

      // Modal functionality
      function showModal(url) {
        const modal = document.getElementById("imgModal");
        const modalImg = document.getElementById("modalImg");
        modal.style.display = "flex";
        modalImg.src = url;
      }
      document.getElementById("closeModal").onclick = function () {
        document.getElementById("imgModal").style.display = "none";
        document.getElementById("modalImg").src = "";
      };
      // Optional: close modal when clicking outside the image
      document.getElementById("imgModal").onclick = function (e) {
        if (e.target === this) {
          this.style.display = "none";
          document.getElementById("modalImg").src = "";
        }
      };
    </script>

    <!-- script to toggle navigation menu -->
    <script>
      function toggleNav() {
        var nav = document.getElementById("main-nav");
        nav.classList.toggle("open");
      }
    </script>

    <!-- script to filter gallery images by category -->
    <script>
      document
        .getElementById("categoryFilter")
        .addEventListener("change", function () {
          const selected = this.value;
          document.querySelectorAll(".category-section").forEach((section) => {
            if (selected === "all") {
              section.style.display = "";
            } else {
              section.style.display =
                section.dataset.cat === selected ? "" : "none";
            }
          });
        });
    </script>
  </body>
</html>
