<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="icon" type="image/x-icon" href="/logo.png" />
  </head>
  <body>
    <!-- Header -->
    <header class="header">
      <div class="logo-title">
        <% info = info || {}; %> <% if (info.logo_url) { %>
        <img src="<%= info.logo_url %>" alt="Logo" />
        <% } %>
        <p><%= info?.name || 'C&S Church Online' %></p>
      </div>
      <button class="nav-toggle" onclick="toggleNav()">â˜°</button>
      <nav id="main-nav">
        <a class="active" href="/admin/dashboard">Dashboard</a>
        <a href="/admin/articles">Articles</a>
        <a href="/admin/videos">Videos</a>
        <a href="/admin/ministry">About</a>
        <a href="/admin/faqs">FAQ</a>
        <a href="/admin/gallery">Gallery Images</a>
        <a href="/admin/gallery/categories">Gal Categories</a>
        <a href="/admin/announcements">Announcement</a>
        <a href="/admin/logout" class="logout-button">Logout</a>
        <!-- Login remains a page link -->
      </nav>
    </header>

    <h2>Create Announcement</h2>
    <form method="POST" action="/admin/announcements" enctype="multipart/form-data">
      <label>Title:</label><br>
      <input type="text" name="title" required><br><br>
      <label>Message:</label><br>
      <textarea name="message" required></textarea><br><br>
      <label>Event Date (optional):</label><br>
      <input type="date" name="event_date"><br><br>
      <label>Event Flyer (optional):</label><br>
      <input type="file" name="flyer"><br><br>
      <button type="submit">Create Announcement</button>
    </form>

    <h3>All Announcements</h3>
<ul class="admin-announcement-list">
  <% announcements.forEach(a => { %>
    <li class="admin-announcement-item">
      <strong><%= a.title %></strong>
      <% if (a.event_date) { %>
        <span style="color:#bfa046;"> | <%= new Date(a.event_date).toDateString() %></span>
      <% } %>
      <br>
      <span><%= a.message %></span>
      <% if (a.flyer_url) { %>
        <div>
          <img src="<%= a.flyer_url %>" alt="Flyer" style="max-width:180px;margin:8px 0;border-radius:8px;">
        </div>
      <% } %>
      <form method="POST" action="/admin/announcements/delete/<%= a.id %>" style="display:inline;">
        <button type="submit" onclick="return confirm('Delete this announcement?')">Delete</button>
      </form>
      <a href="/admin/announcements/edit/<%= a.id %>" class="cta-btn" style="margin-left:12px;">Edit</a>
    </li>
  <% }) %>
</ul>
   

    <script>
      function toggleNav() {
        var nav = document.getElementById("main-nav");
        nav.classList.toggle("open");
      }
    </script>
  </body>
</html>
